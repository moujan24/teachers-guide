@model TeacherViewModel
@{
    ViewData["Title"] = "Primary";
}

<div class="progress">
    <div class="progress-bar bg-warning" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<div class="container">
    <div class="content">
        <h3>Q) What Behaviour can you see in the student?</h3><br>
        <div class="list-group">
            @foreach (var behaviour in Model.bPO)
            {
            //    <a asp-controller="Teacher" asp-action="Secondary_A" asp-route-id="@behaviour.Id"><button type="button" class="btn btn-select">@behaviour.Behaviour</button></a><br>
            <a asp-controller="Teacher" asp-action="Secondary_A" asp-route-id="@behaviour.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                @behaviour.Behaviour
                <h5>&#10095;</h5>
            </a>
            }
        </div>

    </div>
</div>


<script>
    window.location.hash = '#nav';
</script>