@model TeacherViewModel
@{
    ViewData["Title"] = "Secondary";
    ViewData["showBackButton"] = "true";
}

<div class="progress" id="progress">
    <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="container">
    <div class="content" id="mainContent">
        <h3>Q) What Behaviour can you see in the student's behaviours?</h3><br>
        <div class="list-group">
            @foreach (var behaviour in Model.bPT)
            {
                //<a asp-controller="Teacher" asp-action="Intervention" asp-route-id="@behaviour.Id"><button type="button" class="btn btn-select">@behaviour.Behaviour</button></a><br>
                //<button type="submit" class="btn btn-info "id="@behaviour.Id">@behaviour.Behaviour</button><br>
                <a asp-controller="Teacher" asp-action="Intervention" asp-route-id="@behaviour.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    @behaviour.Behaviour
                    <h5>&#10095;</h5>
                </a>
            }
        </div>
    </div>
</div>

<script>

    window.location.hash = '#nav';
</script>