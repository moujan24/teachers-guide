            <div class="row d-flex justify-content-between">
                <div class="index-sections">
                    <span class="Social"></span>
                    Social
                </div>
                <div class="index-sections">
                    <span class="Learning"></span>
                    Learning
                </div>
                <div class="index-sections">
                    <span class="Environmental"></span>
                    Environmental
                </div>
                <div class="index-sections">
                    <span class="Communication"></span>
                    Communication
                </div>
            </div>
        </div>
    </div>
