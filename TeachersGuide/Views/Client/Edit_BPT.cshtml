@model BehaviorPageTow

@{
    ViewData["Title"] = "Edit";
}

<br />
<div class="container-fluid row">
    <br />
    <div class="col-sm-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit behaviour</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <form asp-action="Edit_BPO">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Behaviour" class="control-label"></label>
                                <input asp-for="Behaviour" class="form-control" />
                                <span asp-validation-for="Behaviour" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-info" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Details_BPO" asp-route-id="@Model.BPOId"><< Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
