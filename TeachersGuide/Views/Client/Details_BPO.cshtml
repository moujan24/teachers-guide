@model IEnumerable<BehaviorPageTow>


<div class="container">
    <br>
    <br>
    <p>
        <a asp-action="CreateNewBPT" asp-route-id="@Model.First().BPOId">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Behaviour)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Behaviour)
                    </td>
                    <td>
                        <a asp-action="Edit_BPT" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete_BPT" asp-route-id="@item.Id">Delete</a> |
                        <a asp-action="Details_BPT" asp-route-id="@item.Id" asp-route-data="@item.BPOId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Client" asp-action="EditBehaviour_P1">Back</a>
</div>