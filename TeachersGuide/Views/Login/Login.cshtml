@{
    ViewData["Title"] = "Client Login";

}
@model Users

<div class="container" style="height:700px;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="content d-flex flex-column justify-content-around flex-wrap align-items-center" style="padding:20px; width:100%;">
        <br />
        <br />
        <div style="border:1px solid lightgrey; padding:35px;">
            <h2>Dashboard Login</h2><br>
            <div class="scrim-protect">
                <form method="post" asp-controller="Login" asp-action="Login">
                    <div class="form-group">
                        <label asp-for="Username">Username:</label>
                        <input type="text" asp-for="Username" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password:</label>
                        <input type="password" asp-for="Password" class="form-control" id="pwd">
                    </div>
                    <div class="form-group form-check">
                        <label asp-for="RememberMe" class="form-check-label">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox"> Remember me
                        </label>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a><button type="submit" class="btn btn-primary" style="border-radius:0px;background-color:#2E5299;font-weight:600;letter-spacing:1px;">Login</button></a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

